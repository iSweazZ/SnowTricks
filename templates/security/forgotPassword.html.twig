{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="login-page">
        <form id="lost-pswd-form" action="{{ path('app_rst_password')}}" method="post">
            <img id="background" src="{{ asset("images/main/login.jpg") }}" alt="">

            <h1 class="h3 mb-3 font-weight-normal">Mot de passe perdu ?</h1>
            {{ form_start(form) }}
            <label for="inputEmail">Email</label>
            {{ form_widget(form.mail) }}
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div>
                <button id="lost-pswd-btn" class="btn" type="submit">
                    Envoyer
                </button>

                <a id="cancel-btn" href="{{ path('welcome') }}" class="btn">Annuler</a>
            </div>
        </form>
    </div>
{% endblock %}
