<div class="container">
    <div class="card">
        <div class="card_side card_side-front">
           <div class="banner-card">
               <img src="{{ asset("images/tricks/" ~  trick.getPicture() ) }}" alt="">
           </div>
            <h3 class="text-center mt-3">{{ trick.name }}</h3>
        </div>
        <div class="card_side card_side-back card_side-back-1">
            <div class="background-img-card">
                <img src="{{ asset("images/tricks/" ~  trick.getPicture() ) }}" alt="">
            </div>
            <h3 class="text-center mt-2">{{ trick.name }}</h3>
            <p class="text-center d-flex justify-content-center align-items-center pe-2 ps-2">{{ trick.description }}</p>
            <div class="d-flex align-items-center justify-content-center mb-2">
                <button class="btn text-white border-white mb-3">Accéder à l'article</button>
            </div>

        </div>
    </div>
</div>

